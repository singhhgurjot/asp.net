<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogWebsite.styles.css" asp-append-version="true" />
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-image: url('https://img.freepik.com/free-photo/flowers-notebook-near-laptop_23-2147759307.jpg');
        background-size: cover;
        background-position: center;
        height: 100vh;
    }

    .overlay {
        margin-top: 10%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .jumbotron {
        background: transparent;
        padding: 50px;
        text-align: center;
        border-radius: 10px;
    }

        .jumbotron h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .jumbotron p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

    .btn-get-started {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-get-started:hover {
            background-color: #0056b3;
        }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light ">
            <div class="container">
                <a class="navbar-brand font-italic font-weight-bold" href="/">ScribbleSphere</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Dashboard">Write Blog</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/View">View Blogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold" href="/">Logout</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
